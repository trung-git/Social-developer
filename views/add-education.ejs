<section class="container">
  <h1 class="large text-primary">Add Your Education</h1>
  <p class="lead">
    <i class="fas fa-graduation-cap"></i> Add any school, bootcamp, etc that you
    have attended
  </p>
  <small>* = required field</small>
  <form class="form">
    <div class="form-group">
      <input
        type="text"
        placeholder="* School or Bootcamp"
        name="school"
        id="school"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        placeholder="* Degree or Certificate"
        name="degree"
        id="degree"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        id="fieldofstudy"
        placeholder="Field Of Study"
        name="fieldofstudy"
      />
    </div>
    <div class="form-group">
      <h4>From Date</h4>
      <input type="date" name="from" id="educationStart" />
    </div>
    <div class="form-group">
      <p>
        <input
          type="checkbox"
          name="current"
          id="isCurrentEducation"
          value=""
        />
        Current School or Bootcamp
      </p>
    </div>
    <div class="form-group">
      <h4>To Date</h4>
      <input type="date" id="educationEnd" name="to" />
    </div>
    <div class="form-group">
      <textarea
        name="description"
        cols="30"
        rows="5"
        placeholder="Program Description"
        id="description"
      ></textarea>
    </div>
    <input
      type="button"
      value="Submit"
      id="btnAddEducation"
      class="btn btn-primary my-1"
    />
    <a class="btn btn-light my-1" href="/dashboard">Go Back</a>
  </form>
</section>
